<h1>Listing establecimientos <%= link_to 'New Establecimiento', new_establecimiento_path, class: "btn btn-success pull-right" %></h1>
<a class="btn btn-warning pull-right" href="/establecimientos.pdf">Genrar PDF</a>  




<div>

<div class="row">
   <div class="col-lg-12">


<table class="table table-striped table-advance table-hover">
  <tbody>
  <tr>
    <th><i class="icon_pin_alt"></i>Dirección</th>
    <th><i class="icon_phone"></i> Teléfono</th>
    <th><i class="icon_map"></i> Codpost</th>
    <th> Edit</th>
    <th> Destroy</th>
  </tr>

    <% @establecimientos.each do |establecimiento| %>
      <tr>
        <td><%= link_to establecimiento.direccion, establecimiento %></td>
        <td><%= establecimiento.telefono %></td>
        <td><%= establecimiento.codpost%></td>


        <td><%= link_to '<div class "btn-group"><div class="btn btn-primary"><i class="icon_pencil"></i></div></div>'.html_safe, edit_establecimiento_path(establecimiento)%></td>
        <td><%= link_to '<div class "btn-group"><div class="btn btn-danger"><i class="icon_minus_alt2"></i></div></div>'.html_safe, establecimiento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

