<h1>Lista Proveedores <%= link_to 'New Proveedor', new_proveedor_path, class: "btn btn-success pull-right" %></h1>


<div>

<div class="row">
   <div class="col-lg-12">


<table class="table table-striped table-advance table-hover">
  <tbody>
  <tr>
    <th><i class="icon_profile"></i>Nombre</th>
    <th><i class="icon_mail_alt"></i> Email</th>
    <th><i class="icon_phone"></i> Tel√©fono</th>
    <th><i class="icon_profile"></i> Representante</th>
    <th> Edit</th>
    <th> Destroy</th>
  </tr>

    <% @proveedors.each do |proveedor| %>
      <tr>
