<h1><font color="black"> Proveedores </font><%= link_to 'New Proveedor', new_proveedor_path, class: "btn btn-success pull-right" %></h1>

<%= form_tag(proveedors_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
    <div class ="row">
    <div class ="col-lg-4">
      <%= text_field_tag :search, params[:search], class: "form-control col-lg-4", placeholder: "Buscar Proveedores" %>
      <button class="btn btn-primary pull-left" type="submit"><i class="icon_search"></i></button>
    </div>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
   
      </div>
    </div>
<% end %>

<div>



<div class="row">
   <div class="col-lg-12">


<table class="table table-striped table-advance table-hover">
  <tbody>
  <tr>
    <th><i class="icon_profile"></i>Nombre</th>
    <th><i class="icon_mail_alt"></i> Email</th>
    <th><i class="icon_phone"></i> Tel√©fono</th>
    <th><i class="icon_profile"></i> Representante</th>
    <th> Edit</th>
    <th> Destroy</th>
  </tr>

    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= link_to proveedor.nombre, proveedor %></td>
         <td><%= proveedor.email%></td>
        <td><%= proveedor.telefono %></td>
        <td><%= proveedor.representante %></td>
         <td><%= link_to '<div class "btn-group"><div class="btn btn-primary"><i class="icon_pencil"></i></div></div>'.html_safe, edit_proveedor_path(proveedor)%></td>
        <td><%= link_to '<div class "btn-group"><div class="btn btn-danger"><i class="icon_minus_alt2"></i></div></div>'.html_safe, proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>


