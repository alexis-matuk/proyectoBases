<h1>Listing Inspectores <%= link_to 'New Inspector', new_inspector_path, class: "btn btn-success pull-right" %></h1>



<div>

<div class="row">
   <div class="col-lg-12">


<table class="table table-striped table-advance table-hover">
  <tbody>
  <tr>
   <th><i class="icon_map"></i>Nombre</th>
    <th><i class="icon_map"></i>Institución</th>
    <th><i class="icon_phone"></i> Departamento</th>
    <th><i class="icon_phone"></i> Teléfono</th>
    <th> Edit</th>
    <th> Destroy</th>
  </tr>

    <% @inspectors.each do |inspector| %>
      <tr>
        <td><%= link_to inspector.nombre, inspector %></td>
        <td><%= inspector.institucion %></td>
        <td><%= inspector.departamento %></td>
        <td><%= inspector.telefono%></td>


        <td><%= link_to '<div class "btn-group"><div class="btn btn-primary"><i class="icon_pencil"></i></div></div>'.html_safe, edit_inspector_path(inspector)%></td>
        <td><%= link_to '<div class "btn-group"><div class="btn btn-danger"><i class="icon_minus_alt2"></i></div></div>'.html_safe, inspector, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

