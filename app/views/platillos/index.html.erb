<h1>Listing Platillos <%= link_to 'New Platillo', new_platillo_path, class: "btn btn-success pull-right" %></h1>

<%= form_tag(platillos_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
    <div class ="row">
    <div class ="col-lg-4">
      <%= text_field_tag :search, params[:search], class: "form-control col-lg-4", placeholder: "Buscar establecimientos" %>
      <button class="btn btn-primary pull-left" type="submit"><i class="icon_search"></i></button>
    </div>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
   
      </div>
    </div>
<% end %>


<div>

<div class="row">
   <div class="col-lg-12">


<table class="table table-striped table-advance table-hover">
  <tbody>
  <tr>
    <th><i class="icon_tag_alt"></i>Nombre</th>
    <th><i class="icon_document_alt"></i> Descripci√≥n</th>
    <th><i class="icon_currency"></i> Precio</th>
    <th> Edit</th>
    <th> Destroy</th>
  </tr>

    <% @platillos.each do |platillo| %>
      <tr>
        <td><%= link_to platillo.nombre, platillo %></td>
        <td><%= platillo.descripcion %></td>
        <td><%= platillo.precio%></td>


        <td><%= link_to '<div class "btn-group"><div class="btn btn-primary"><i class="icon_pencil"></i></div></div>'.html_safe, edit_platillo_path(platillo)%></td>
        <td><%= link_to '<div class "btn-group"><div class="btn btn-danger"><i class="icon_minus_alt2"></i></div></div>'.html_safe, platillo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

