<h1><font color="black"> Reportes </font></h1>



<div>

<div class="row">
   <div class="col-lg-12">


<table class="table table-striped table-advance table-hover">
  <tbody>
  <tr>
    <th><i class="icon_calendar"></i>Fecha</th>
    <th><i class="icon_group"></i> Clientes</th>
    <th><i class="icon_currency"></i> Ingreso</th>
    <th> Edit</th>
    <th> Destroy</th>
  </tr>

    <% @reportes.each do |reporte| %>
      <tr>
        <td><%= link_to reporte.fecha, reporte %></td>
        <td><%= reporte.clientes %></td>
        <td><%= reporte.ingreso%></td>


        <td><%= link_to '<div class "btn-group"><div class="btn btn-primary"><i class="icon_pencil"></i></div></div>'.html_safe, edit_reporte_path(reporte)%></td>
        <td><%= link_to '<div class "btn-group"><div class="btn btn-danger"><i class="icon_minus_alt2"></i></div></div>'.html_safe, reporte, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<div class="row">

  <!-- Line Chart - Single Series -->
  <div class="col-xs-6">
    <h3>Ingreso por día</h3>

    <%= line_chart @reportes.group_by_day(:fecha).sum(:ingreso), discrete: true%>
  </div>

</div>

<div class="row">

  <!-- Line Chart - Single Series -->
  <div class="col-xs-6">
    <h3>Número de clientes por día</h3>

    <%= line_chart @reportes.group_by_day(:fecha).sum(:clientes), discrete: true%>
  </div>

</div>

