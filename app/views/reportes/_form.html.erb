<%= form_for(@reporte) do |f| %>
  <% if @reporte.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@reporte.errors.count, "error") %> prohibited this reporte from being saved:</h2>

      <ul>
      <% @reporte.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<%= f.hidden_field :establecimiento_id %>


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Datos
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="form-validate form-horizontal" id="feedback_form" method="get" action="">
                        <div class="form-group ">
                        <div class="row">
                            <label for="cname" class="control-label col-lg-2">Fecha <span class="required">*</span></label>
                          </div>
                          <div class="row">
                            <div class="col-lg-12">
                         
                                <%= f.datetime_select :fecha,{:class => "form-control"} %>

                            </div>
                            </div>
                        </div>
                        <div class="form-group ">
                        <div class="row">
                            <label for="cemail" class="control-label col-lg-2">Clientes <span class="required">*</span></label>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                            
                                <%= f.number_field :clientes , {:class => "form-control"} %>
                            </div>
                          </div>
                        </div>
                        <div class="form-group ">
                        <div class="row">
                            <label for="curl" class="control-label col-lg-2">Ingreso</label>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                            
                                <%= f.number_field :ingreso , :step =>'0.01', :class => 'form-control' %>
                            </div>
                        </div>
                        </div>                                    
                        <div class="form-group">
                            <div class="col-lg-12">
                            <br>
                                <div class="actions">
                                 <%= link_to 'Back', reportes_path,{:class => "btn btn-warning"} %>
                                  <%= f.submit "Aceptar" ,{:class => "btn btn-primary col-lg-6 pull-right"}%>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>


<% end %>





