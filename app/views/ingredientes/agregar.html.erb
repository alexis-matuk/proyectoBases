
<%= flash[:error] %>

<h1>Lista Ingredientes <%= link_to 'New Ingrediente', new_ingrediente_path, class: "btn btn-success pull-right" %></h1>


<div>

<div class="row">
   <div class="col-lg-12">


<table class="table table-striped table-advance table-hover">
  <tbody>
  <tr>
    <th><i class="icon_profile"></i>Nombre</th>
    <th><i class="icon_mail_alt"></i> Precio</th>
  </tr>

    <% @ingredientes.each do |ingrediente| %>
      <tr>
         <td><%= link_to ingrediente.nombre, llenar_ingrediente_platillo_path(ide: @platillo.id, id: ingrediente.id) %></td>
         <td><%= ingrediente.precio%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

